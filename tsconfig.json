{
  // other settings...
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  // other settings..
  "compilerOptions": {
    // other compiler options...
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext", // "module": "CommonJS" should work too
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
